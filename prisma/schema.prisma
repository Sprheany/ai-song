generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db.sqlite"
}

model Music {
  id         String @id
  name       String
  artist     String
  audioUrl   String
  coverImage String
  duration   Float
  tags       String @default("")
  lyrics     String @default("")

  playCount   Int @default(0)
  upvoteCount Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
